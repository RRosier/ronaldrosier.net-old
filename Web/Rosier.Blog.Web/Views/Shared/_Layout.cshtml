<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="service" type="application/atomsvc+xml" href= "http://@Request.Url.Authority/AtomPubService.svc" />
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.6.4.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shCore.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushCSharp.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushCss.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushJScript.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushSql.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushXml.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushPowerShell.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/SyntaxHighlighter/shCore.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/SyntaxHighlighter/shThemeDefault.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Layout.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        function SetSelectedMenuItem() {
            var selectedPage = '@ViewBag.ActivePage';

            if (selectedPage == "Blog")
                $('ul.menu li:first a').addClass('selected');
            else if (selectedPage == "About")
                $('ul.menu li:nth-child(2) a').addClass('selected');
            else if (selectedPage == "Contact")
                $('ul.menu li:last a').addClass('selected');

        }

        function RenderPlusOneButton() {
            (function () {
                var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                po.src = 'https://apis.google.com/js/plusone.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
            })();
        }

        function RenderLikeButton() {
            (function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        }

        $(document).ready(function (e) {
            SetSelectedMenuItem();

            SyntaxHighlighter.defaults['class-name'] = "code";
            SyntaxHighlighter.all();

            RenderPlusOneButton();
            RenderLikeButton();
        });
    </script>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-28349413-1']);
        _gaq.push(['_setDomainName', 'ronaldrosier.net']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
<div id="fb-root"></div>

    <div id="headerArea">
        <div class="container">
            <div class="logo">
                <a href="/">
                    <img src="@Url.Content("~/Content/Images/TitleImage.png")" alt="Ronald Rosier.NET" /></a>
            </div>
            <div class="quote">
                "Dream as if you'll live forever, live as if you'll die today (James Dean)"</div>
            <div class="subtitle">
                (ASP).NET - C# - System Architecture - and more...</div>
            <ul class="menu">
                <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                <li>@Html.ActionLink("About", "Index", "About")</li>
                <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
            </ul>
        </div>
    </div>
    <div id="contentArea">
        <div class="container">
            <div id="bars">
                <div id="mainBar">
                    @RenderBody()
                </div>
                <div id="sideBar">
                    <h3>
                        Follow or Share</h3>
                    <ul>
                        @if (ViewBag.DisplayCommentLink)
                        {
                            <li class="commentlinkInMenu">
                                <a href="#addcomment">Comment</a><span>{<a href="#comments">@ViewBag.NummerOfComments</a></span>
                            </li>
                        }
                        <li>
                            <a href="/AtomPubService.svc/Blog/Feed/rss"><img src="@Url.Content("~/Content/Images/RssFeed20.gif")" alt="Rss 2.0 Feed" /></a>
                            <a href="/AtomPubService.svc/Blog/Feed/atom"><img style="float:right;" src="@Url.Content("~/Content/Images/AtomFeed.gif")" alt="Atom Feed" /></a></li>
                        <li style="clear: both;">
                            <script src="http://platform.linkedin.com/in.js" type="text/javascript"></script>
                            <script type="IN/Share" data-counter="right"></script>

                            <div style="float:right; width:75px;">
                                <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
                                <script type="text/javascript">    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>
                            </div>
                        </li>
                        <li>
                            <g:plusone size="medium"></g:plusone>
                            <div style="float:right; width:75px;" class="fb-like" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>
                        </li>
                        <li>
                            <hr style="border-top:1px solid #c79974;" />
                        </li>
                        <li style="clear: both;">
                            <a href="https://twitter.com/ronaldrosier" class="twitter-follow-button" data-show-count="false">Follow @Html.Raw("@")ronaldrosier</a>
                            <script>    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>
                        </li>
                        <li style="clear:both;">
                            <a rel="author" href="https://plus.google.com/114665229063870181070"><img src="http://ssl.gstatic.com/images/icons/gplus-16.png" alt="View Ronald Rosier's Google+ profile" width="16" height="16"></a>
                            <a href="http://be.linkedin.com/in/ronaldrosier" style="text-decoration:none;"><img src="http://www.linkedin.com/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="View Ronald Rosier's LinkedIn profile" border="0" /></a>
                        </li>
                    </ul>
                    <h3>
                        Tag Cloud</h3>
                    <ul>
                        @foreach (var t in (IEnumerable<Rosier.Blog.Service.ViewModel.TagCloudViewModel>)ViewData["TagCloud"])
                        {
                            @Html.RouteLink(t.Name,
                                 new
                                 {
                                     controller = "Category",
                                     categoryValue = t.Value
                                 },
                                 new
                                 {
                                     @style = "font-size:" + t.FontSize + ";",
                                     title = t.CountOfCategories + " entries"
                                 })
                            @:&nbsp;&nbsp;
                                                }
                    </ul>
                    <h3>
                        Archive</h3>
                    <ul>
                        @foreach (var a in (IEnumerable<Rosier.Blog.Service.ViewModel.ArchiveViewModel>)ViewData["Archive"])
                        { 
                            <li>@Html.RouteLink(a.Display,
                                new
                                {
                                    controller = "Blog",
                                    year = a.Year,
                                    month = a.Month.ToString("00")
                                })
                            </li>
                        }
                    </ul>
                    <h3>
                        People</h3>
                    <ul>
                        <li><a href="http://www.dominicpettifer.co.uk/">Dominic Pettifer</a></li>
                        <li><a href="http://bloggingabout.net/blogs/vagif/">Vagif Abilov</a></li>
                        <li><a href="http://aikdev.co.uk">Wittawat Keawcheroen</a></li>
                    </ul>
                    <h3>
                        Others</h3>
                    <ul class="center">
                        <li>
                            <img src="@Url.Content("~/Content/Images/MCTS.gif")" alt="Microsoft technical specialist" /></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="disclaimer">
        <div class="container">
            <b>Disclaimer:</b> The opinions expressed herin are my own personal opinions and
            do not represent my employer's view in any way.
        </div>
    </div>
    <div id="footerArea">
        <div class="container">
            &copy; 2012 <a title="Google+ profile" href="https://plus.google.com/114665229063870181070?rel=me">Ronald Rosier</a>.&nbsp;&nbsp;&nbsp;&nbsp;
            <a rel="license" href="http://creativecommons.org/licenses/by/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by/3.0/80x15.png" title="This work is licensed under a Creative Commons Attribution 3.0 Unported License" /></a>
        </div>
    </div>
    <div id="messagePopup" class="info">
        <div class="title">
            Title</div>
        <div class="content">
            content stuff to be said.</div>
        <div class="close">
            <button class="button">
                Close</button></div>
    </div>
</body>
</html>

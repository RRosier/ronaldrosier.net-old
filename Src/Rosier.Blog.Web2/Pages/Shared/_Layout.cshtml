<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ronald Rosier .NET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light border-bottom box-shadow mb-3 sticky-top header">
            <div class="container">
                <div class="brand">
                    <img src="/img/OstrichLarge.jpg" class="image-small" />
                    <div class="brand-title">
                        <a class="navbar-brand" href="/Blog">
                            RONALD ROSIER .NET</a>
                        <span>Enterprise applications development</span>
                    </div>
                </div>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="header-right">
                        <span class="quote navbar-text">Dream as if you'll live forever, live as if you'll die today "James Dean"</span>

                        <div class="navbar-collapse collapse  justify-content-between">
                                <ul class="navbar-nav d-md-inline-flex">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="/Blog">Blog</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="/Tags">Tags</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="/Archive">Archive</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="/About">About</a>
                                    </li>
                                </ul>
                            </div>
                    </div>
            </div>

            </div>
        </nav>
    </header>
    <div class="container content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2008-2021 - Ronald Rosier - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
